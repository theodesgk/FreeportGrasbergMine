<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
  </configSections>
  <appSettings>
    <add key="DispatchRestarterPort" value="9998" />
    <add key="DispatchRestarterIP" value="0.0.0.0" />
    <add key="IntelliMineServicePrefix" value="intellimine" />
    <add key="PartialRestartServiceNamesContain" value="Dispatch,OMS,SpoolerC" />
    <add key="RestarterServiceNameContains" value="Starter" />
    <!-- The service host uses this timeout to determine when to drop idle connections -->
    <add key="ReceiveTimeout" value="5" />
    <!-- Used by WCF as the default value for the operation timeout -->
    <add key="SendTimeout" value="5" />
    <!-- Keeps the connection and resets if an infrastructure message is received -->
    <add key="InactivityTimeout" value="5" />
  </appSettings>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true">
    <variable name="LogDir" value="Log" />
    <variable name="LogFileName" value="DispatchRestarterService" />
    <!--Maximun number of archive files that should be kept. If it is less or equal to 0, the old files aren't deleted -->
    <variable name="MaxArchiveFile" value="0" />
    <include file=".\nLog.config" />
    <rules>
      <!-- logger name format is Category'Component, we can add multiple rules for the same file as below -->
      <!-- <logger name="*FieldCommunication" minlevel="Trace" writeTo="logfile" /> -->
      <!-- <logger name="BusinessLogic*" minlevel="Trace" writeTo="logfile" /> -->
      <logger name="*" minlevel="Info" writeTo="logfile" />
    </rules>
  </nlog>
</configuration>