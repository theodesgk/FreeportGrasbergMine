<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets async="true">
    <!-- 50MB=52428800  -->
    <target name="logfile"
            xsi:type="File"
            fileName="${LogDir}/${LogFileName}.log"
            layout="[${date:format=yyyy-MM-dd HH\:mm\:ss}, ${modular-category-component}, ${modular-level}] ${message}"
            concurrentWrites="false"
            autoFlush="true"
            keepFileOpen="true"
            archiveAboveSize="52428800"
            maxArchiveFiles="${MaxArchiveFile}"
            archiveFileName="${LogDir}/${LogFileName}_{####}.txt"
            archiveNumbering="Sequence"
            />
  </targets>
</nlog>