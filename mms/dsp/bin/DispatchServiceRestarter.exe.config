<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
  </configSections>
  <appSettings>
    <!-- port of restarter service -->
    <add key="DispatchRestarterPort" value="9998" />
    <!-- servers to restart services on, separated by comma -->
    <add key="ServersToRestart" value="localhost" />
  </appSettings>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true">
    <variable name="LogDir" value="Log" />
    <variable name="LogFileName" value="DispatchServiceRestarter" />
    <!--Maximun number of archive files that should be kept. If it is less or equal to 0, the old files aren't deleted -->
    <variable name="MaxArchiveFile" value="0" />
    <include file=".\nLog.config" />
    <rules>
      <!-- logger name format is Category'Component, we can add multiple rules for the same file as below -->
      <!-- <logger name="*FieldCommunication" minlevel="Trace" writeTo="logfile" /> -->
      <!-- <logger name="BusinessLogic*" minlevel="Trace" writeTo="logfile" /> -->
      <logger name="*" minlevel="Info" writeTo="logfile" />
    </rules>
  </nlog>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>
</configuration>