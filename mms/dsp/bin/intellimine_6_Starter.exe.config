<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="serviceContainerConfigurationSection" type="Modular.CentralServiceContainer.Container.Configuration.ServiceContainerConfigurationSection, Modular.CentralServiceContainer.Central" />
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
  </configSections>
  <serviceContainerConfigurationSection>
    <componentConfiguration>
      <add componentConfigurationDirectory="C:\Program Files\intellimine\mms\dsp\bin\intellimine_6_Starter" recursiveConfigurationSearch="True" />
    </componentConfiguration>
    <containerConfiguration loadServiceHostInSeparateDomain="True">
    </containerConfiguration>
  </serviceContainerConfigurationSection>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true">
    <variable name="LogDir" value=".\Log" />
    <variable name="LogFileName" value="intellimine_6_Starter" />
    <!--Maximun number of archive files that should be kept. If it is less or equal to 0, the old files aren't deleted -->
    <variable name="MaxArchiveFile" value="0" />
    <include file=".\nLog.config" />
    <rules>
      <!-- logger name format is Category'Component, we can add multiple rules for the same file as below -->
      <!-- <logger name="*FieldCommunication" minlevel="Trace" writeTo="logfile" /> -->
      <!-- <logger name="BusinessLogic*" minlevel="Trace" writeTo="logfile" /> -->
      <logger name="*" minlevel="Debug" writeTo="logfile" />
    </rules>
  </nlog>
</configuration>