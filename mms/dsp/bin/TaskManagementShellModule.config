<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="CompositeUI" type="Microsoft.Practices.CompositeUI.Configuration.SettingsSection, Microsoft.Practices.CompositeUI, Version=1.0.51205.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35" />
    <section name="shellConfiguration" type="Modular.SmartUI.Implementation.Shell.Configuration.ShellConfiguration, Modular.SmartUI.Client.Implementation" />
    <section name="coreServicesConfiguration" type="Modular.SmartUI.Implementation.CoreServices.Configuration.CoreServicesConfiguration, Modular.SmartUI.Client.Implementation" />
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
  </configSections>
  <appSettings>
    <add key="CultureInfo" value="en-US" />
    <add key="ClientSettingsProvider.ServiceUri" value="" />
  </appSettings>
  <connectionStrings>
    <add name="DiscoveryService" connectionString="net.tcp://localhost:50999/DiscoveryService" />
  </connectionStrings>
  <CompositeUI>
    <services>
      <add serviceType="Modular.OnlineHelp.IHelpService, Modular.OnlineHelp.Common" instanceType="Modular.OnlineHelp.Implementation.HelpService, Modular.OnlineHelp.Client.Implementation" />
    </services>
  </CompositeUI>
  <shellConfiguration>
    <mainForm title="TaskManagementHost" />
    <layout type="SingleScreenLayout">
      <mainFormLayout>
        <navigationMenu enabled="false" />
        <workspace dock="Fill" />
      </mainFormLayout>
    </layout>
  </shellConfiguration>
  <coreServicesConfiguration>
    <navigation>
      <welcomeScreen enabled="false" name="welcomeScreen" caption="Welcome" toolTip="Welcome Screen" width="640" height="480" />
    </navigation>
    <resourceManagement>
      <resources>
        <resource name="Shell" baseName="Modular.SmartUI.Implementation.Properties.Resources" assemblyName="Modular.SmartUI.Client.Implementation.dll" />
        <resource name="CoreServices" baseName="Modular.SmartUI.Implementation.Properties.Resources" assemblyName="Modular.SmartUI.Client.Implementation.dll" />
      </resources>
    </resourceManagement>
    <applicationInformation applicationName="Task Managememt Host" applicationDescription="Task Managememt Host" applicationImage="" simpleAboutBox="false" />
  </coreServicesConfiguration>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true">
    <variable name="LogDir" value="Log" />
    <variable name="LogFileName" value="IntellimineLog" />
    <!--Maximun number of archive files that should be kept. If it is less or equal to 0, the old files aren't deleted -->
    <variable name="MaxArchiveFile" value="0" />
    <include file=".\nLog.config" />
    <rules>
      <!-- logger name format is Category'Component, we can add multiple rules for the same file as below -->
      <!-- <logger name="*FieldCommunication" minlevel="Trace" writeTo="logfile" /> -->
      <!-- <logger name="BusinessLogic*" minlevel="Trace" writeTo="logfile" /> -->
      <logger name="*" minlevel="Info" writeTo="logfile" />
    </rules>
  </nlog>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.Ink" publicKeyToken="31BF3856AD364E35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-1.7.2600.2180" newVersion="1.7.2600.2180" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <system.web>
    <membership defaultProvider="ClientAuthenticationMembershipProvider">
      <providers>
        <add name="ClientAuthenticationMembershipProvider" type="System.Web.ClientServices.Providers.ClientFormsAuthenticationMembershipProvider, System.Web.Extensions, Version=4.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35" serviceUri="" />
      </providers>
    </membership>
    <roleManager defaultProvider="ClientRoleProvider" enabled="true">
      <providers>
        <add name="ClientRoleProvider" type="System.Web.ClientServices.Providers.ClientRoleProvider, System.Web.Extensions, Version=4.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35" serviceUri="" cacheTimeout="86400" />
      </providers>
    </roleManager>
  </system.web>
</configuration>